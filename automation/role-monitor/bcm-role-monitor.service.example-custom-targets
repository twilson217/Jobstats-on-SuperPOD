[Unit]
Description=BCM Role Monitor for Jobstats Services
After=network.target network-online.target
Wants=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=root
Group=root
# Example: Using a custom Prometheus targets directory
ExecStart=/usr/bin/python3 /usr/local/bin/bcm_role_monitor.py --prometheus-targets-dir /my/custom/prometheus/targets
Restart=always
RestartSec=30
StandardOutput=journal
StandardError=journal
SyslogIdentifier=bcm-role-monitor

# Security settings
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
# IMPORTANT: Update ReadWritePaths to include your custom targets directory
ReadWritePaths=/var/lib/bcm-role-monitor /var/log /etc/bcm-role-monitor /my/custom/prometheus/targets
PrivateTmp=true

# Environment
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
